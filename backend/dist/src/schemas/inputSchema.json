{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Mentra User Input Schema",
    "description": "Schema for user input to generate personalized learning roadmaps",
    "type": "object",
    "properties": {
        "skills": {
            "type": "array",
            "description": "Array of user's existing skills",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the skill",
                        "minLength": 1
                    },
                    "level": {
                        "type": "string",
                        "enum": ["beginner", "intermediate", "advanced"],
                        "description": "Proficiency level"
                    },
                    "description": {
                        "type": "string",
                        "description": "Optional description of proficiency"
                    }
                },
                "required": ["name", "level"]
            }
        },
        "goal": {
            "type": "object",
            "description": "Learning goal specification",
            "properties": {
                "subject": {
                    "type": "string",
                    "description": "Main subject area",
                    "minLength": 1
                },
                "specificObjective": {
                    "type": "string",
                    "description": "Detailed learning objective",
                    "minLength": 1
                },
                "depth": {
                    "type": "string",
                    "enum": ["basic", "intermediate", "advanced", "expert"],
                    "description": "Desired mastery level"
                }
            },
            "required": ["subject", "specificObjective", "depth"]
        },
        "timeConstraints": {
            "type": "object",
            "description": "Time availability constraints",
            "properties": {
                "totalWeeks": {
                    "type": "integer",
                    "description": "Total weeks for learning plan",
                    "minimum": 1,
                    "maximum": 52
                },
                "hoursPerWeek": {
                    "type": "integer",
                    "description": "Hours per week available",
                    "minimum": 1,
                    "maximum": 40
                },
                "preferredDays": {
                    "type": "array",
                    "description": "Preferred study days",
                    "items": {
                        "type": "string",
                        "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
                    }
                },
                "startDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Optional start date (ISO format)"
                }
            },
            "required": ["totalWeeks", "hoursPerWeek"]
        }
    },
    "required": ["skills", "goal", "timeConstraints"]
}
