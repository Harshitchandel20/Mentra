{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mentra Roadmap Output Schema",
  "description": "Schema for AI-generated learning roadmap output",
  "type": "object",
  "properties": {
    "roadmap": {
      "type": "object",
      "properties": {
        "weeks": {
          "type": "array",
          "description": "Array of weekly learning units",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "weekNumber": {
                "type": "integer",
                "description": "Week number (1-based)",
                "minimum": 1
              },
              "title": {
                "type": "string",
                "description": "Week title",
                "minLength": 1
              },
              "topics": {
                "type": "array",
                "description": "Topics for this week",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Topic name",
                      "minLength": 1
                    },
                    "description": {
                      "type": "string",
                      "description": "Topic description",
                      "minLength": 1
                    },
                    "estimatedHours": {
                      "type": "number",
                      "description": "Estimated hours for topic",
                      "minimum": 0.5
                    },
                    "prerequisites": {
                      "type": "array",
                      "description": "Required prerequisites",
                      "items": {
                        "type": "string"
                      }
                    },
                    "resources": {
                      "type": "array",
                      "description": "Recommended resources",
                      "items": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["book", "course", "video", "article", "tutorial", "documentation"],
                            "description": "Resource type"
                          },
                          "title": {
                            "type": "string",
                            "description": "Resource title",
                            "minLength": 1
                          },
                          "url": {
                            "type": "string",
                            "format": "uri",
                            "description": "Resource URL"
                          }
                        },
                        "required": ["type", "title"]
                      }
                    }
                  },
                  "required": ["name", "description", "estimatedHours", "prerequisites", "resources"]
                }
              },
              "weeklyGoal": {
                "type": "string",
                "description": "Weekly accomplishment goal",
                "minLength": 1
              },
              "sequencingExplanation": {
                "type": "string",
                "description": "Explanation of topic ordering",
                "minLength": 1
              }
            },
            "required": ["weekNumber", "title", "topics", "weeklyGoal", "sequencingExplanation"]
          }
        },
        "totalWeeks": {
          "type": "integer",
          "description": "Total number of weeks",
          "minimum": 1
        },
        "totalEstimatedHours": {
          "type": "number",
          "description": "Total estimated hours",
          "minimum": 1
        },
        "overallGoal": {
          "type": "string",
          "description": "Overall learning objective",
          "minLength": 1
        },
        "prerequisiteAnalysis": {
          "type": "string",
          "description": "Analysis of prerequisite sequencing",
          "minLength": 1
        }
      },
      "required": ["weeks", "totalWeeks", "totalEstimatedHours", "overallGoal", "prerequisiteAnalysis"]
    }
  },
  "required": ["roadmap"]
}